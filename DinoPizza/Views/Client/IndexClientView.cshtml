@model IEnumerable<DinoPizza.Models.ClientModel>

<h2>Список клиентов</h2>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Адрес</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.PhoneNumber</td>
                <td>@client.Address</td>
                <td>@client.Email</td>
                <td>
                    <a asp-action="ClientOrdersListView" asp-route-clientId="@client.ClientId" class="btn btn-info">Детали</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreateClientView" class="btn btn-primary">Добавить клиента</a>
