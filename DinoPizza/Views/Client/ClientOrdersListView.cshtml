@model IEnumerable<DinoPizza.Models.Order>

<h2>Заказы клиента: @ViewBag.ClientName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Адрес</th>
            <th>Время заказа</th>
            <th>Детали заказа</th>
            <th>Статус</th>
            <th>Курьер</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Address</td>
                <td>@order.OrderTime.ToString("g")</td>
                <td>@order.OrderDetails</td>
                <td>@order.Status</td>
                <td>@(order.Courier != null ? order.Courier.Name : "Курьер не назначен")</td>
                <td>
                    <a asp-controller="Order" asp-action="OrderDetailsView" asp-route-orderId="@order.Id" class="btn btn-primary">Посмотреть</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Client" asp-action="IndexClientView" class="btn btn-secondary">Назад</a>
