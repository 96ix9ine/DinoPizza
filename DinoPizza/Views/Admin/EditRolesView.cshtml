@model DinoPizza.Models.RoleEditModel

@{
    ViewData["Title"] = "Редактирование системы роли";
}


<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="EditRolesView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input readonly asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input readonly asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <hr />
            <div>
                <label>Список дополнительных прав</label>
                @Html.EditorFor(x=>x.PermissionsList)
            </div>
            <div>
                <label>Список пользователей этой роли</label>
                @Html.EditorFor(x => x.UsersList)
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

